@model Web.Models.RegisterViewModel

@{
    ViewBag.Title = "Редагувати";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагувати</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

