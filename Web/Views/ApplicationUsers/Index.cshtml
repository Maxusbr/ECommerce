@model IEnumerable<Web.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Клієнти</h2>

<table class="table table-striped">
    <tr>
        <th>
            Login
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MiddleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Номер телефону
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="text-center">
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MiddleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td style="text-align: end">
            @Html.ActionLink(" ", "ProfileClient", new { id = item.Id },
               new { @class = "glyphicon glyphicon-user", title = "Профіль клієнта" })
            @if (User.IsInRole("Адміністратор")){
                @: |
                @Html.ActionLink(" ", "Edit", new { id = item.Id },
               new { @class = "glyphicon glyphicon-edit", title = "Редагувати" })
                @: |
                @Html.ActionLink(" ", "Delete", new { id = item.Id },
               new { @class = "glyphicon glyphicon-trash", title = "Видаліти" })
            }
        </td>
    </tr>
}

</table>
