@model IEnumerable<Web.Models.MarketEvents>

@{
    ViewBag.Title = "Перелік заходів";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Створити захід", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Детально", "Details", new { id = item.Id })
                |
                @Html.ActionLink("Редагувати", "Edit", new { id = item.Id })
                |
                @Html.ActionLink("Видаліти", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
