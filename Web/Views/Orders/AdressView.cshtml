@model Web.Models.Adress

@Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })

    <hr />
    <h4>Адреса</h4>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Street)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.House)
                </th>
            </tr>

            <tr>
                <td>
                    @Html.EditorFor(model => model.Sity, new { htmlAttributes = new { @class = "form-control stretch adressInput adressSity" } })
                    @Html.ValidationMessageFor(model => model.Sity, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(model => model.Street, new { htmlAttributes = new { @class = "form-control stretch adressInput adressStreet" } })
                    @Html.ValidationMessageFor(model => model.Street, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(model => model.House, new { htmlAttributes = new { @class = "form-control stretch adressInput adressHouse" } })
                    @Html.ValidationMessageFor(model => model.House, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>
    </div>
    <div class="form-group">
        <div id="map" style="height: 400px"></div>
    </div>

