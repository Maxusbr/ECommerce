@model Web.Models.RouteViewModel
@{
    var pref = ViewData.TemplateInfo.HtmlFieldPrefix.Replace('[', '_').Replace(']', '_');
    var td = $"{pref}_TotalDistance";
    var det = $"{pref}_Detail";
    var glyp = $"{pref}_Glyphicon";
    var rt = $"{pref}_RouteTariff";
}
<tr class="info" id="@pref" @*onclick="ShowDetail(@Model.Id)"*@>
    <td>
        <span class="center-block">
            @Html.DisplayFor(modelItem => modelItem.Id)
            @Html.HiddenFor(modelItem => modelItem.Id)
            @Html.HiddenFor(modelItem => modelItem.OrdersAdresses)
            @Html.HiddenFor(modelItem => modelItem.UrbanId)
            @Html.HiddenFor(modelItem => modelItem.ShippingTypeId)
        </span>
    </td>
    <td>
        <span class="center-block">
        @Html.DisplayFor(modelItem => modelItem.OrdersIds)
        @Html.HiddenFor(modelItem => modelItem.OrdersIds)
    </span>
    </td>
    <td>
        <span class="center-block">
        @Html.DisplayFor(modelItem => modelItem.ShippingType)
        @Html.HiddenFor(modelItem => modelItem.ShippingType)
    </span>
    </td>
    <td>
        <span class="center-block">
        @Html.HiddenFor(modelItem => modelItem.TotalDistance)
        @*@Html.EditorFor(modelItem => modelItem.TotalDistance, new { htmlAttributes =
            new { @class = "form-control", @readonly = "readonly" } })*@
        <span class="@td"></span>
    </span>
    </td>
    <td>
        <span class="center-block">
        @Html.DisplayFor(modelItem => modelItem.CountOrders)
        @Html.HiddenFor(modelItem => modelItem.CountOrders)
    </span>
    </td>
    <td>
        <span class="center-block">
        <span class="@rt"></span>
        @Html.HiddenFor(modelItem => modelItem.RouteTariff)
        @Html.HiddenFor(modelItem => modelItem.OrderDistance)
        @Html.HiddenFor(modelItem => modelItem.SummOrderTariff)
    </span>
    </td>

    <td><span class="glyphicon glyphicon-chevron-down" id="@glyp"></span></td>
</tr>

<tr id="@det" style="display: none">
    <td />
    <td colspan="6">
        <div>
            @{
                Html.RenderPartial("ReceiptsList", Model.Orders, new ViewDataDictionary
            {
                TemplateInfo = new TemplateInfo { HtmlFieldPrefix = ViewData.TemplateInfo.HtmlFieldPrefix + ".Orders" }
            });
            }
        </div>
    </td>
</tr>
